@model IEnumerable<TinTucNews.Models.New>
@{
    ViewData["Title"] = "Search";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <ul class="page-header-breadcrumb">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li>Search</li>
                </ul>
                @try
                {
                    <h1>Result: @Model.Count() Item(s)</h1>
                }
                catch
                {
                    <h1>Result: Not Found</h1>
                }

            </div>
        </div>
    </div>
</div>
<!-- /Page Header -->

<!-- row -->
<div class="row">

    @foreach (var item in Model)
    {
        <!-- post -->
        <div class="col-md-6">
            <div class="post post-thumb">
                <a class="post-img" asp-action="Details" asp-route-id="@item.Id"><img src="@item.UrlImage" alt=""></a>
                <div class="post-body">
                    <div class="post-meta">
                        <a class="post-category cat-2" href="#">JavaScript</a>
                        <span class="post-date">@item.CreatedDate</span>
                    </div>
                    <h3 class="post-title">
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                    </h3>
                </div>
            </div>
        </div>
        <!-- /post -->
    }
</div>
<!-- /row -->